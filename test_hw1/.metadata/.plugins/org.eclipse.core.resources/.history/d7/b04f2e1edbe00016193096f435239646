			String temp = scan.nextLine();
			if(temp == "1"){
				System.out.println("Please enter your username");
				String username = scan.nextLine();
				if(users.containsKey(username)){
					
				}else{
					
				}
				
			}
			else if(temp == "2"){
				System.exit(0);
			}
			else{
				System.out.println("You have entered an invalid command, please try again.");
			}

		}
		
		
		
	}

}
