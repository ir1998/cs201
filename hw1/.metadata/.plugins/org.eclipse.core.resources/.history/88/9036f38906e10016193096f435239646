package movieMedia;

import java.util.ArrayList;

public class Movie {
	String title;
	String director;
	ArrayList<String> writers = new ArrayList<String>();
	public ArrayList<String> getWriters() {
		return writers;
	}

	public int getYear() {
		return year;
	}
	public double getRating() {
		return rating;
	}
	public ArrayList<String> getActors() {
		return actors;
	}
	public void setActors(ArrayList<String> actors) {
		this.actors = actors;
	}
	public String getTitle() {
		return title;
	}
	public String getDirector() {
		return director;
	}
	public String getGenre() {
		return genre;
	}
	public String getDescription() {
		return description;
	}
	int year;
	String genre;
	String description;
	double rating;
	ArrayList<String> actors = new ArrayList<String>();
	
	//constructor without rating
	public Movie(String sTitle, String sDirector, ArrayList<String> sWriters, int sYear,
			String sGenre, String sDescription, ArrayList<String> sActors){
		title = sTitle;
		director = sDirector;
		writers = sWriters;
		year = sYear;
		genre = sGenre;
		description = sDescription;
		actors = sActors;
		rating = -1;
	}
	//constructor with rating
	public Movie(String sTitle, String sDirector, ArrayList<String> sWriters, int sYear,
			String sGenre, String sDescription, double sRating, ArrayList<String> sActors){
		title = sTitle;
		director = sDirector;
		writers = sWriters;
		year = sYear;
		genre = sGenre;
		description = sDescription;
		rating = sRating;
		actors = sActors;
	}
	
	public Movie() {
		// TODO Auto-generated constructor stub
	}
	void setTitle(String sTitle){
		title = sTitle;
	}
	void setDirector(String sDirector){
		director = sDirector;
	}
	void addWriter (String sWriter){
		writers.add(sWriter);
	}
	void setYear(String sYear){
		year = Integer.parseInt(sYear);
	}
	void setGenre(String sGenre){
		genre = sGenre;
	}
	void setDescription(String sDesc){
		description = sDesc;
	}
	void setRating(String sRating){
		rating = (Double.parseDouble(sRating));
	}
	void addActor (String sActor){
		actors.add(sActor);
	}
	
}
